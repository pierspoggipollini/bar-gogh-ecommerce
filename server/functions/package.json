{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "type": "module",
  "scripts": {
    "lint": "eslint",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "start:staging": "env-cmd -f .env.stag node app.js",
    "start:production": "env-cmd -f .env.prod node app.js",
    "deploy:staging": "env-cmd -f .env.stag firebase use stag && firebase deploy --only functions",
    "deploy:production": "env-cmd -f .env.prod firebase use prod && firebase deploy --only functions"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.6",
    "csrf-csrf": "^3.0.3",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "firebase-admin": "^13.6.1",
    "firebase-functions": "^7.0.5",
    "jsonwebtoken": "^9.0.3",
    "nanoid": "^5.1.6",
    "nodemailer": "^8.0.1",
    "stripe": "^15.1.0"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "eslint": "^8.56.0",
    "eslint-config-google": "^0.14.0",
    "firebase-functions-test": "^3.4.1"
  },
  "overrides": {
    "minimatch": "^10.2.1",
    "glob": "^11.0.0",
    "rimraf": "^6.0.0",
    "flat-cache": "^6.1.0"
  },
  "private": true
}
